{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["--background-index", "--all-scopes-completion", "--clang-tidy", "--suggest-missing-includes", "--header-insertion=never"],
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "trace.server": "verbose",
            "initializationOptions": {
                "cacheDirectory": "/tmp/clangd"
            }
        }
    },
    "suggest.noselect": false,
    "coc.source.buffer.enable" : true,
    "coc.source.around.enable" : true,
    "coc.source.file.enable" : true,
    "codeLens.enable":  true
}
